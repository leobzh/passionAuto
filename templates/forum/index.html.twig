{% extends 'base.html.twig' %}

{% block title %}Forum Automobile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/forum.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}
    
    <main class="forum-container">
        <section class="forum-header">
            <h1>Forum Automobile</h1>
            <p class="subtitle">Échangez avec la communauté passionnée d'automobile</p>
            
            <div class="forum-actions">
                <div class="search-bar">
                    <input type="text" placeholder="Rechercher dans le forum...">
                    <button type="submit"><i class="fas fa-search"></i></button>
                </div>
                <a href="#" class="create-thread-btn">
                    <i class="fas fa-plus"></i> Nouveau sujet
                </a>
            </div>

            <div class="forum-filters">
                <button class="filter-btn active">Tous les sujets</button>
                <button class="filter-btn">Questions techniques</button>
                <button class="filter-btn">Actualités</button>
                <button class="filter-btn">Conseils d'achat</button>
            </div>
        </section>

        <section class="forum-categories">
            <div class="category-card popular">
                <i class="fas fa-fire"></i>
                <h3>Sujets populaires</h3>
                <span class="thread-count">152 discussions</span>
            </div>
            <div class="category-card recent">
                <i class="fas fa-clock"></i>
                <h3>Derniers sujets</h3>
                <span class="thread-count">89 discussions</span>
            </div>
            <div class="category-card unanswered">
                <i class="fas fa-question"></i>
                <h3>Sans réponse</h3>
                <span class="thread-count">34 discussions</span>
            </div>
        </section>

        <section class="forum-threads">
            <article class="thread-card featured">
                <div class="thread-status">
                    <span class="status-badge hot">Popular</span>
                </div>
                <div class="thread-main">
                    <h2 class="thread-title">Quelle autonomie réelle pour la Tesla Model 3 Highland ?</h2>
                    <p class="thread-excerpt">Retour d'expérience après 6 mois d'utilisation quotidienne...</p>
                    <div class="thread-meta">
                        <div class="thread-author">
                            <img src="{{ asset('images/forum/avatar1.jpg') }}" alt="Avatar" class="author-avatar">
                            <span class="author-name">Michel Durant</span>
                        </div>
                        <div class="thread-stats">
                            <span><i class="fas fa-comment"></i> 45 réponses</span>
                            <span><i class="fas fa-eye"></i> 1.2k vues</span>
                        </div>
                    </div>
                </div>
                <div class="thread-activity">
                    <span class="last-activity">Dernière réponse il y a 2h</span>
                </div>
            </article>

            <article class="thread-card">
                <div class="thread-status">
                    <span class="status-badge technical">Technique</span>
                </div>
                <div class="thread-main">
                    <h2 class="thread-title">Problème de recharge Renault Megane E-Tech</h2>
                    <p class="thread-excerpt">Difficultés avec la charge rapide sur autoroute...</p>
                    <div class="thread-meta">
                        <div class="thread-author">
                            <img src="{{ asset('images/forum/avatar2.jpg') }}" alt="Avatar" class="author-avatar">
                            <span class="author-name">Sophie Martin</span>
                        </div>
                        <div class="thread-stats">
                            <span><i class="fas fa-comment"></i> 12 réponses</span>
                            <span><i class="fas fa-eye"></i> 456 vues</span>
                        </div>
                    </div>
                </div>
                <div class="thread-activity">
                    <span class="last-activity">Dernière réponse hier</span>
                </div>
            </article>

            <article class="thread-card">
                <div class="thread-status">
                    <span class="status-badge advice">Conseil</span>
                </div>
                <div class="thread-main">
                    <h2 class="thread-title">Choix SUV électrique budget 45k€</h2>
                    <p class="thread-excerpt">Hésitation entre plusieurs modèles pour usage familial...</p>
                    <div class="thread-meta">
                        <div class="thread-author">
                            <img src="{{ asset('images/forum/avatar3.jpg') }}" alt="Avatar" class="author-avatar">
                            <span class="author-name">Pierre Dubois</span>
                        </div>
                        <div class="thread-stats">
                            <span><i class="fas fa-comment"></i> 28 réponses</span>
                            <span><i class="fas fa-eye"></i> 890 vues</span>
                        </div>
                    </div>
                </div>
                <div class="thread-activity">
                    <span class="last-activity">Dernière réponse il y a 3j</span>
                </div>
            </article>
        </section>

        <div class="pagination">
            <a href="#" class="page-btn"><i class="fas fa-chevron-left"></i> Précédent</a>
            <div class="page-numbers">
                <a href="#" class="active">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <span>...</span>
                <a href="#">12</a>
            </div>
            <a href="#" class="page-btn">Suivant <i class="fas fa-chevron-right"></i></a>
        </div>
    </main>
{% endblock %}