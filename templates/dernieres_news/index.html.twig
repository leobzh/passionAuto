{% extends 'base.html.twig' %}

{% block title %}Actualités Automobiles{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/dernieres_news.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}

    <div class="news-container">
        <div class="news-header">
            <h1>Actualités Automobiles</h1>
            <p class="subtitle">Les dernières nouvelles du monde automobile</p>
        </div>

        <div class="featured-news">
            <article class="featured-card">
                <div class="news-image">
                    <img src="{{ asset('images/dernieres_news/tesla-cybertruck.jpg') }}" alt="Tesla Cybertruck">
                </div>
                <div class="news-content">
                    <span class="news-category">Véhicules Électriques</span>
                    <h2>Tesla Cybertruck : Les premières livraisons dépassent les attentes</h2>
                    <p class="news-date">
                        <i class="fas fa-calendar"></i> 20 Février 2025
                    </p>
                    <p class="news-excerpt">
                        Tesla annonce des chiffres records pour les premières livraisons du Cybertruck, dépassant les prévisions initiales des analystes...
                    </p>
                    <a href="#" class="read-more">Lire la suite <i class="fas fa-arrow-right"></i></a>
                </div>
            </article>
        </div>

        <div class="news-grid">
            <article class="news-card">
                <div class="news-image">
                    <img src="{{ asset('images/dernieres_news/renault-5-electric.jpg') }}" alt="Renault 5 E-Tech">
                </div>
                <div class="news-content">
                    <span class="news-category">Innovation</span>
                    <h3>La nouvelle Renault 5 E-Tech fait sensation</h3>
                    <p class="news-date">
                        <i class="fas fa-calendar"></i> 19 Février 2025
                    </p>
                    <p class="news-excerpt">
                        Le retour de l'iconique R5 en version électrique séduit déjà le public...
                    </p>
                </div>
            </article>

            <article class="news-card">
                <div class="news-image">
                    <img src="{{ asset('images/dernieres_news/peugeot-e-3008.jpg') }}" alt="Peugeot e-3008">
                </div>
                <div class="news-content">
                    <span class="news-category">Nouveautés</span>
                    <h3>Peugeot e-3008 : Le SUV électrique fait peau neuve</h3>
                    <p class="news-date">
                        <i class="fas fa-calendar"></i> 18 Février 2025
                    </p>
                    <p class="news-excerpt">
                        Découvrez la nouvelle génération du SUV électrique de Peugeot...
                    </p>
                </div>
            </article>

            <article class="news-card">
                <div class="news-image">
                    <img src="{{ asset('images/dernieres_news/bmw-ix.jpg') }}" alt="BMW iX M60">
                </div>
                <div class="news-content">
                    <span class="news-category">Sport</span>
                    <h3>BMW iX M60 : La performance électrique redéfinie</h3>
                    <p class="news-date">
                        <i class="fas fa-calendar"></i> 17 Février 2025
                    </p>
                    <p class="news-excerpt">
                        BMW repousse les limites avec sa nouvelle version sportive...
                    </p>
                </div>
            </article>
        </div>

        <div class="news-pagination">
            <a href="#" class="pagination-button"><i class="fas fa-chevron-left"></i> Précédent</a>
            <div class="pagination-numbers">
                <a href="#" class="active">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <a href="#">4</a>
            </div>
            <a href="#" class="pagination-button">Suivant <i class="fas fa-chevron-right"></i></a>
        </div>
    </div>
{% endblock %}