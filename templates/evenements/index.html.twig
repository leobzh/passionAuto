{% extends 'base.html.twig' %}

{% block title %}Événements Automobiles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/evenements.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}
    
    <main class="events-container">
        <section class="events-header">
            <h1>Événements Automobiles</h1>
            <p class="subtitle">Découvrez les rendez-vous incontournables du monde automobile</p>
            
            <div class="events-filters">
                <button class="filter-btn active">Tous</button>
                <button class="filter-btn">Salons</button>
                <button class="filter-btn">Courses</button>
                <button class="filter-btn">Rassemblements</button>
                <button class="filter-btn">Expositions</button>
            </div>
        </section>

        <section class="featured-event">
            <div class="event-card featured">
                <div class="event-image">
                    <img src="{{ asset('images/evenements/salon-auto-paris.webp') }}" alt="Salon Auto Paris">
                    <span class="event-badge">Événement Majeur</span>
                </div>
                <div class="event-content">
                    <div class="event-header">
                        <h2>Salon International de l'Automobile de Paris 2025</h2>
                        <div class="event-meta">
                            <span class="event-category">Salon</span>
                            <span class="event-price">À partir de 25€</span>
                        </div>
                    </div>
                    <div class="event-info">
                        <div class="info-item">
                            <i class="fas fa-calendar"></i>
                            <span>15-20 Mars 2025</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Paris Expo Porte de Versailles</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-clock"></i>
                            <span>10h00 - 19h00</span>
                        </div>
                    </div>
                    <p class="event-description">Le plus grand salon automobile français revient avec les dernières nouveautés et concept-cars des constructeurs du monde entier. Au programme : véhicules électriques, technologies innovantes et mobilité du futur.</p>
                    <div class="event-actions">
                        <a href="#" class="btn-primary">Réserver maintenant</a>
                        <a href="#" class="btn-secondary">Plus d'informations</a>
                    </div>
                </div>
            </div>
        </section>

        <section class="events-grid">
            <article class="event-card">
                <div class="event-image">
                    <img src="{{ asset('images/evenements/24h-lemans.jpg') }}" alt="24h du Mans">
                    <span class="event-badge">Course</span>
                </div>
                <div class="event-content">
                    <div class="event-date-badge">
                        <span class="month">JUIN</span>
                        <span class="day">15-16</span>
                        <span class="year">2025</span>
                    </div>
                    <h3>24 Heures du Mans</h3>
                    <div class="event-details">
                        <p><i class="fas fa-map-marker-alt"></i> Circuit des 24 Heures, Le Mans</p>
                        <p><i class="fas fa-ticket-alt"></i> 95€ - 195€</p>
                    </div>
                    <a href="#" class="event-link">En savoir plus <i class="fas fa-arrow-right"></i></a>
                </div>
            </article>

            <article class="event-card">
                <div class="event-image">
                    <img src="{{ asset('images/evenements/expo-retro.jpg') }}" alt="Exposition Rétromobile">
                    <span class="event-badge">Exposition</span>
                </div>
                <div class="event-content">
                    <div class="event-date-badge">
                        <span class="month">AVR</span>
                        <span class="day">05-07</span>
                        <span class="year">2025</span>
                    </div>
                    <h3>Rétromobile 2025</h3>
                    <div class="event-details">
                        <p><i class="fas fa-map-marker-alt"></i> Paris Expo, Porte de Versailles</p>
                        <p><i class="fas fa-ticket-alt"></i> 20€ - 45€</p>
                    </div>
                    <a href="#" class="event-link">En savoir plus <i class="fas fa-arrow-right"></i></a>
                </div>
            </article>

            <article class="event-card">
                <div class="event-image">
                    <img src="{{ asset('images/evenements/rallye-monte-carlo.jpg') }}" alt="Rallye Monte-Carlo">
                    <span class="event-badge">Course</span>
                </div>
                <div class="event-content">
                    <div class="event-date-badge">
                        <span class="month">JAN</span>
                        <span class="day">22-28</span>
                        <span class="year">2025</span>
                    </div>
                    <h3>Rallye Monte-Carlo</h3>
                    <div class="event-details">
                        <p><i class="fas fa-map-marker-alt"></i> Monte-Carlo, Monaco</p>
                        <p><i class="fas fa-ticket-alt"></i> À partir de 30€</p>
                    </div>
                    <a href="#" class="event-link">En savoir plus <i class="fas fa-arrow-right"></i></a>
                </div>
            </article>
        </section>

        <div class="view-more">
            <a href="#" class="btn-outline">Voir tous les événements</a>
        </div>
    </main>
{% endblock %}