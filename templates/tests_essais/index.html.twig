{% extends 'base.html.twig' %}

{% block title %}Tests & Essais Automobiles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/tests_essais.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}
    
    <main class="tests-container">
        <section class="tests-header">
            <h1>Tests & Essais</h1>
            <p class="subtitle">Découvrez nos analyses approfondies des derniers véhicules</p>
            
            <div class="filters">
                <button class="filter-btn active">Tous</button>
                <button class="filter-btn">Électriques</button>
                <button class="filter-btn">Hybrides</button>
                <button class="filter-btn">Sportives</button>
                <button class="filter-btn">SUV</button>
            </div>
        </section>

        <section class="featured-test">
            <article class="featured-card">
                <div class="test-image">
                    <img src="{{ asset('images/tests_essais/bmw-i5.jpg') }}" alt="BMW i5">
                    <span class="test-badge">Test Complet</span>
                </div>
                <div class="test-content">
                    <div class="test-meta">
                        <span class="test-category">Berline Électrique</span>
                        <span class="test-duration"><i class="fas fa-clock"></i> 45 min de lecture</span>
                    </div>
                    <h2>BMW i5 : L'électrique version grand tourisme</h2>
                    <div class="test-ratings">
                        <div class="rating-item">
                            <span class="rating-label">Performance</span>
                            <div class="rating-stars">★★★★☆</div>
                        </div>
                        <div class="rating-item">
                            <span class="rating-label">Confort</span>
                            <div class="rating-stars">★★★★★</div>
                        </div>
                        <div class="rating-item">
                            <span class="rating-label">Autonomie</span>
                            <div class="rating-stars">★★★★☆</div>
                        </div>
                    </div>
                    <p class="test-excerpt">Un essai approfondi de la nouvelle BMW i5, la berline électrique qui allie luxe, technologie et performances. Découvrez notre verdict après 1000 km au volant...</p>
                    <div class="test-footer">
                        <div class="author">
                            <img src="{{ asset('images/tests_essais/author.jpg') }}" alt="Auteur" class="author-image">
                            <span class="author-name">Jean Dupont</span>
                        </div>
                        <span class="test-date"><i class="fas fa-calendar"></i> 20 Février 2025</span>
                    </div>
                    <a href="#" class="read-more">Lire l'essai complet <i class="fas fa-arrow-right"></i></a>
                </div>
            </article>
        </section>

        <section class="tests-grid">
            <article class="test-card">
                <div class="test-image">
                    <img src="{{ asset('images/tests_essais/tesla-model3.jpg') }}" alt="Tesla Model 3">
                    <span class="test-badge">Premier Contact</span>
                </div>
                <div class="test-content">
                    <span class="test-category">Berline Électrique</span>
                    <h3>Tesla Model 3 Highland : L'évolution parfaite ?</h3>
                    <div class="test-ratings compact">
                        <div class="rating-stars">★★★★☆</div>
                    </div>
                    <p class="test-excerpt">Premier contact avec la Model 3 restylée qui peaufine une recette déjà efficace...</p>
                    <div class="test-footer">
                        <span class="test-date">19 Février 2025</span>
                        <a href="#" class="read-more-link">Lire <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </article>

            <article class="test-card">
                <div class="test-image">
                    <img src="{{ asset('images/tests_essais/porsche-macan.jpg') }}" alt="Porsche Macan">
                    <span class="test-badge">Essai Longue Durée</span>
                </div>
                <div class="test-content">
                    <span class="test-category">SUV Électrique</span>
                    <h3>Porsche Macan Electric : Le SUV sportif réinventé</h3>
                    <div class="test-ratings compact">
                        <div class="rating-stars">★★★★★</div>
                    </div>
                    <p class="test-excerpt">3000 km au volant du nouveau Macan 100% électrique...</p>
                    <div class="test-footer">
                        <span class="test-date">18 Février 2025</span>
                        <a href="#" class="read-more-link">Lire <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </article>

            <article class="test-card">
                <div class="test-image">
                    <img src="{{ asset('images/tests_essais/renault-scenic.jpg') }}" alt="Renault Scenic">
                    <span class="test-badge">Comparatif</span>
                </div>
                <div class="test-content">
                    <span class="test-category">SUV Familial</span>
                    <h3>Renault Scenic E-Tech vs Peugeot e-3008</h3>
                    <div class="test-ratings compact">
                        <div class="rating-stars">★★★★☆</div>
                    </div>
                    <p class="test-excerpt">Le grand match des SUV électriques français...</p>
                    <div class="test-footer">
                        <span class="test-date">17 Février 2025</span>
                        <a href="#" class="read-more-link">Lire <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </article>
        </section>

        <div class="pagination">
            <a href="#" class="page-btn"><i class="fas fa-chevron-left"></i> Précédent</a>
            <div class="page-numbers">
                <a href="#" class="active">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <span>...</span>
                <a href="#">8</a>
            </div>
            <a href="#" class="page-btn">Suivant <i class="fas fa-chevron-right"></i></a>
        </div>
    </main>
{% endblock %}